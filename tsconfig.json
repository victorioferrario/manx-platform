{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@hubx/fabric": [
        "libs/fabric/src/index.ts"
      ],
      "@hubx/services": [
        "libs/services/src/index.ts"
      ],
      "@hubx/fiber": [
        "libs/fiber/src/index.ts"
      ],
      "@hubx/elements": [
        "libs/elements/src/index.ts"
      ],
      "@hubx/system": [
        "libs/system/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
